# Example Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# APP SERVICE (app/.env)
# =============================================================================
NODE_ENV=development
PROVIDER_URL=http://localhost:8545
WALLET_PRIVATE_KEY=your_ethereum_private_key_here
PORT=4000

# =============================================================================
# FACE RECOGNITION SERVICE (face/.env)
# =============================================================================
FACE_API_KEY=your_face_api_key_here
FACE_API_SECRET=your_face_api_secret_here
PORT=3021

# =============================================================================
# FRONTEND SERVICE (frontend/.env)
# =============================================================================
FLASK_ENV=development
SECRET_KEY=your_flask_secret_key_here
DATABASE_URL=sqlite:///user_data.db
PORT=5000

# =============================================================================
# NEXTGEN SERVICE (nextGen/.env)
# =============================================================================
NODE_ENV=development
PORT=3000
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# =============================================================================
# HARDHAT CONFIGURATION (hardhatProj/.env)
# =============================================================================
PRIVATE_KEY=your_ethereum_private_key_here
ETHERSCAN_API_KEY=your_etherscan_api_key_here
ALCHEMY_API_KEY=your_alchemy_api_key_here

# =============================================================================
# PDF TO JPG SERVICE (pdfToJpg/.env)
# =============================================================================
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=document_verification
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# =============================================================================
# IPFS CONFIGURATION
# =============================================================================
IPFS_PROJECT_ID=your_ipfs_project_id
IPFS_PROJECT_SECRET=your_ipfs_project_secret

# =============================================================================
# SECURITY
# =============================================================================
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Add any other external service API keys here
# Example:
# STRIPE_SECRET_KEY=your_stripe_secret_key
# SENDGRID_API_KEY=your_sendgrid_api_key 